.bg-behind-brain
	position fixed
	top 50%
	left 50%	
	z-index $z-bg-behind-brain
	
	display block
	width 47%
	
	background $color-primary
	border-radius 50%
	transform translate(-50%, -50%) scale(0)
	
	+below($media-mobil-menu-is-hidded)
		display none
	
	&_big
		width 69%
		background rgba($color-primary, .43)

	&__inner
		display block
		padding-top 100%