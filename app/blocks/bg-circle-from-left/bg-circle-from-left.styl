.bg-circle-from-left
	position fixed
	top 50%
	left 0
	
	display block
	width 100vh
	height 100vh
	
	border-radius 50%

	transform translate(-50%, -50%) scale(0)
	
	+below($media-mobil-menu-is-hidded)
		display none
	
	&_big
		z-index $bg-circle-from-left_big

		width 180vh
		height 180vh
		
		background rgba($color-default, 0.3)
		
		
	&_medium
		z-index $bg-circle-from-left_medium
		
		width 140vh
		height 140vh
		
		background rgba($color-default, 0.5)
	
	&_small
		z-index $bg-circle-from-left_small
		background-color transparent
		background-color yellow
		