.video
	position fixed
	top 0
	right 0
	left 0
	bottom 0
	z-index $z-video
	
	display block
	overflow hidden
	
	&_inCercle
		width 100vh
		height 100vh
		border-radius 50%
		transform translateX(-50%) scale(0)
		z-index 900
	
	&__inner
		position absolute
		top 0
		right 0
		width 100%
		height 100%
		background rgba($color-primary,0.4)
	
	&__clip
		position relative
		z-index -1
	

	

	

		

			